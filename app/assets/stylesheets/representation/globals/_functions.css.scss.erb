@function color($option){
  @if $option == 'wc.red' { @return rgba(223, 80, 80, 1); }
  @if $option == 'grey.light' { @return rgba(240, 240, 240, 1); };;
}

@mixin triangles($position){
  &::#{$position}{
    position: absolute;
    z-index: 1;
    display: block;
    width: 100%;
    height: 13px;
    background: transparent url(<%= asset_data_uri "triangle/red.svg" %>) repeat-x left top;
    content: "";
    @if $position == "before" {
      top: -13px;
      @include transform(scaleY(-1));
    } @else{
      top: 100%;
    }
  }
}