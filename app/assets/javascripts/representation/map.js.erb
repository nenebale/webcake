function initializeMap() {
  var mapOptions = {
    center: new google.maps.LatLng(47.558, 7.592),
    zoom: 14,
    disableDefaultUI: true,
    scrollwheel: false,
    disableDoubleClickZoom: true,
    keyboardShortcuts: false,
    draggable: !Modernizr.touch,
    styles:
    [
      {
        "featureType": "administrative",
        "stylers": [
          { "visibility": "off" }
        ]
      },{
        "featureType": "administrative.locality",
        "stylers": [
          { "visibility": "on" }
        ]
      },{
        "featureType": "administrative.neighborhood",
        "elementType": "labels",
        "stylers": [
          { "visibility": "on" }
        ]
      },{
        "featureType": "poi",
        "stylers": [
          { "visibility": "off" }
        ]
      },{
        "featureType": "road",
        "elementType": "labels",
        "stylers": [
          { "visibility": "off" }
        ]
      },{
        "featureType": "transit.station",
        "stylers": [
          { "visibility": "off" }
        ]
      },{
        "featureType": "water",
        "elementType": "labels",
        "stylers": [
          { "visibility": "off" }
        ]
      },{
        "featureType": "poi.park",
        "elementType": "geometry",
        "stylers": [
          { "visibility": "on" },
          { "lightness": 42 }
        ]
      },{
        "featureType": "landscape.man_made",
        "elementType": "labels",
        "stylers": [
          { "visibility": "on" }
        ]
      },{
      }
    ]
  };
  var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
  var image = new google.maps.MarkerImage('<%= asset_path "pin.png" %>', new google.maps.Size(29, 40), new google.maps.Point(0,0), new google.maps.Point(15,33));

  var marker = new google.maps.Marker({
    position: new google.maps.LatLng(47.55929, 7.59317),
    map: map,
    icon: image,
    clickable: false,
    animation: google.maps.Animation.DROP,
  });
  
  enquire.register("screen and (min-width: 321px)", {
    match : function() {
      map.set("zoom", 15);
      map.set("center", new google.maps.LatLng(47.556, 7.59));
    },      
    unmatch : function() {
      map.set("zoom", 14);
      map.set("center", new google.maps.LatLng(47.558, 7.592));
    }
  });
};

google.maps.event.addDomListener(window, 'load', initializeMap);
